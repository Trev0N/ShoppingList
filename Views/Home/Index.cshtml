@{
    ViewBag.Title = "Home Page";
}

<style>
    ul.a {
        list-style-type: decimal;
        list-style-position: inherit;
        align-content: center;
        width: 100%;
        display: inline-block;
    }

    li.a {
        font-size: 17px;
    }

    input.a {
        background-color: #44c767;
        border-radius: 28px;
        border: 1px solid #18ab29;
        display: inline-block;
        cursor: pointer;
        color: #ffffff;
        font-family: Arial;
        font-size: 17px;
        padding: 15px 22px;
        text-decoration: none;
        text-shadow: 0px 1px 0px #2f6627;
    }

        input.a:hover {
            background-color: #5cbf2a;
        }
        input.a:active {
            position: relative;
            top: 1px;
        }

    input.b {
        background-color: #44c767;
        border-radius: 28px;
        border: 1px solid #18ab29;
        display: inline;
        cursor: pointer;
        color: #ffffff;
        font-family: Arial;
        margin-top: 15px;
        font-size: 15px;
        padding: 7px 13px;
        text-decoration: none;
        text-shadow: 0px 1px 0px #2f6627;
    }
    input.b:hover {
        background-color: #5cbf2a;
    }

    input.b:active {
        position: relative;
        top: 1px;
    }

    input.c {
        background-color: #FF0000;
        border-radius: 28px;
        border: 1px solid #FF0000;
        display: inline;
        cursor: pointer;
        color: #ffffff;
        font-family: Arial;
        margin-top: -5px;
        font-size: 10px;
        padding: 5px 8px;
        text-decoration: none;
        text-shadow: 0px 1px 0px #2f6627;
    }

        input.c:hover {
            background-color: #FF6347;
        }

        input.c:active {
            position: relative;
            top: 1px;
        }
</style>

<div>


    <div style="position: center; text-align:center; width: 100%;">
        <h1>Twoje listy zakupów</h1>
    </div>
    <ul>
        @{foreach (var shoppingList in ViewBag.ShoppingLists)
            {


                <li style="font-size: 25px; display:normal">
                            @*<div class="row d-inline-flex w-100 ml-3">*@
                                <div class="col-xs-6">
                                    <h3>
                                        Nazwa: @shoppingList.Name
                                    </h3>
                                    <h4>
                                        Opis: @shoppingList.Description
                                    </h4>
                                </div>
                                <div class="col-xs-6">
                                    <input class="b" type="button" value="Edytuj liste" onclick="location.href='@Url.Action("Edit",new { id = shoppingList.Id })'" />
                                    <input class="b" type="button" value="Dodaj produkt" onclick="location.href='@Url.Action("EditProduct",new { id = shoppingList.Id })'" />
                                    <input type="button"
                                           class="c"
                                           style=" margin-top: 15px;
        font-size: 15px;
        padding: 7px 13px;"
                                           value="Usuń liste"
                                           onclick="location.href='@Url.Action("DeleteList", "Home", new { id = shoppingList.Id })'" />
                                </div>
                            @*</div>*@
</li>
                <li style="        list-style-type: none
">
                    <ul class="a">

                        @{ foreach (var shoppingProduct in shoppingList.Products)
                            {

                                <li class="a">
                                                            <div class="row d-inline-flex w-100 ml-3">
                                                                <div class="col-xs-3">
                                                                    @shoppingProduct.Name
                                                                </div>
                                                                <div class="col-xs-3">
                                                                    Ilość: @shoppingProduct.Quantity
                                                                </div>
                                                                <div class="col-xs-3">
                                                                    <input type="button"
                                                                           class="c"
                                                                           value="Usuń produkt"
                                                                           onclick="location.href='@Url.Action("DeleteProduct", "Home", new { id = shoppingProduct.Id })'" />
                                                                </div>
                                                               
                                                            </div>
                                </li>

                            }
                        }
                    </ul>
                </li>
            }
        }
    </ul>


    <input class="a" type="button" value="Dodaj nowe zakupy" onclick="location.href='@Url.Action("Add", "Shopping")'" />
</div>